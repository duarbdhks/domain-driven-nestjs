{
  "compilerOptions": {
    "strict": false,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@server/*": ["src/*"],
      "@libs/*": ["src/libs/*"],
      "@shared/*": ["src/shared/*"],
      "@enum/*": ["src/shared/enum/*"],
      "@interface/*": ["src/shared/interface/*"]
    }
  },
}
